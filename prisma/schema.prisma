// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String     @id @default(cuid())
  title       String
  speaker     String?
  room        String
  startTime   DateTime
  endTime     DateTime
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  feedbacks   Feedback[]

  @@map("sessions")
}

model Feedback {
  id        String   @id @default(cuid())
  sessionId String
  useful    Boolean
  learned   Boolean
  explore   Boolean
  createdAt DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("feedbacks")
}

model EventFeedback {
  id        String   @id @default(cuid())
  comment   String
  createdAt DateTime @default(now())

  @@map("event_feedbacks")
}
